<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_admin_grid"/>
    <body>
        <referenceContainer name="content">
            <!-- This is an example of how to specify the hyva admin grid block together with the grid name -->
            <block class="Hyva\Admin\Block\Adminhtml\HyvaGrid" name="demo-grid">
                <arguments>
                    <argument name="grid_name" xsi:type="string">products-grid</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
